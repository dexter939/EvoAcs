modules = ["php-8.3", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["php83", "php83Packages.composer", "php83Extensions.pdo_mysql", "php83Extensions.soap", "php83Extensions.redis", "protobuf", "prosody"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Queue Worker"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Prosody XMPP Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ACS Server"

[[workflows.workflow]]
name = "Queue Worker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan queue:work --sleep=3 --tries=3 --timeout=120"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Prosody XMPP Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "prosody --config prosody.cfg.lua"
waitForPort = 6000

[[workflows.workflow]]
name = "ACS Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DB_HOST=$PGHOST DB_PORT=$PGPORT DB_DATABASE=$PGDATABASE DB_USERNAME=$PGUSER DB_PASSWORD=$PGPASSWORD && php artisan config:clear && php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

